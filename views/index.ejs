<!-- About -->
<section class="about section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-12 mb-15">
                <div class="section-subtitle">ABOUT CPI</div>
                <div class="section-title">Effortless Luxury Living — Right Here in Bilaspur</div>
                <p>Welcome to Central Point International, Bilaspur’s landmark destination for luxury stays, celebrations, and warm hospitality. Established in 1959 and led across three generations, CPI blends heritage charm with contemporary comfort.</p>
                <p class="mb-40">Whether you’re here for business, weddings, or leisure, our thoughtfully designed spaces, premium amenities, and personalized service ensure an experience that feels relaxed, elegant, and truly memorable.</p> 
                <a href="/contact" class="button-3 mb-15">Get in Touch</a>
                <div class="phone"><a href="tel:+9669507000"><i class="fa-light fa-phone"></i>+91 9669507000</a></div>
            </div>
            <div class="col-lg-3 offset-lg-1 col-md-6 mb-20 mt-45"> <img class="rounded-2 animation-float1" src="/assets/img/0L4A7317.webp" alt=""> </div>
            <div class="col-lg-3 col-md-6 mb-20"> <img class="rounded-2 animation-float2" src="/assets/img/rooms/suite/suite-2.webp" alt=""> </div>
        </div>
    </div>
</section>

<!-- Offers 1 -->
<section class="offers1 section-padding bg-lightbrown">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center mb-20">
                <div class="section-subtitle">LUXURY & GRANDEUR</div>
                <div class="section-title">VENUES & BANQUETS</div>
            </div>
        </div>
        <% if (venues && venues.length > 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme">
                        <% venues.forEach((venue) => { %>
                            <div class="item">
                                <% 
                                var venueImage = venue.bannerImage || (venue.detailImages && venue.detailImages.length > 0 ? venue.detailImages[0] : '/assets/img/offers/01.jpg');
                                var venueLink = venue.link || '/venue/' + venue.slug;
                                %>
                                <div class="img"> <img src="<%= venueImage %>" alt="<%= venue.title %>"> </div>
                                <div class="con">
                                    <div class="title"><%= venue.title %></div>
                                    <div class="arrow"> <a href="<%= venueLink %>"><span class="fa-light fa-arrow-right"></span></a> </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-12 text-center">
                    <p>No venues available.</p>
                </div>
            </div>
        <% } %>
    </div>
</section>

<style>
    .offers1 .item .img {
        height: 400px;
        overflow: hidden;
    }
    .offers1 .item .img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
<!-- Rooms 1 -->
<section class="rooms1 section-padding bg-darkgray">
    <div class="container">
        <div class="row mb-30 align-items-center">
            <div class="col-md-5 text-left">
                <div class="section-subtitle">Luxury Resort Hotel</div>
                <div class="section-title white mb-0">Rooms & Suites</div>
            </div>
            <div class="col-md-7">
                <p>Discover our thoughtfully designed accommodations offering comfort, elegance, and modern amenities. From spacious deluxe rooms to luxurious suites with separate dining areas, each space is crafted to provide a perfect blend of functionality and style for business travelers, families, and leisure guests.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="owl-carousel owl-theme">
                    <% if (stays && stays.length > 0) { %>
                        <% stays.forEach((stay) => { %>
                            <% 
                            var stayImage = stay.bannerImage || (stay.detailImages && stay.detailImages.length > 0 ? stay.detailImages[0] : '/assets/img/rooms/a.jpg');
                            var stayLink = stay.link || '/room/' + stay.slug;
                            
                            // Get 3 facilities to display
                            var facilities = [];
                            if (stay.stayDetails && stay.stayDetails.bedType) {
                                facilities.push({ icon: 'fa-thin fa-bed-front', text: stay.stayDetails.bedType });
                            }
                            if (stay.stayDetails && stay.stayDetails.roomSize) {
                                facilities.push({ icon: 'fa-thin fa-expand', text: stay.stayDetails.roomSize });
                            }
                            if (stay.features && stay.features.length > 0) {
                                var hasBreakfast = stay.features.some(f => f.toLowerCase().includes('breakfast'));
                                var hasWifi = stay.features.some(f => f.toLowerCase().includes('wifi'));
                                var hasBathroom = stay.features.some(f => f.toLowerCase().includes('bathroom') || f.toLowerCase().includes('washroom'));
                                if (hasBreakfast && facilities.length < 3) {
                                    facilities.push({ icon: 'fa-thin fa-mug-saucer', text: 'Breakfast' });
                                } else if (hasWifi && facilities.length < 3) {
                                    facilities.push({ icon: 'fa-thin fa-wifi', text: 'WiFi' });
                                } else if (hasBathroom && facilities.length < 3) {
                                    facilities.push({ icon: 'fa-thin fa-bath', text: 'Bathroom' });
                                } else if (facilities.length < 3 && stay.features[0]) {
                                    facilities.push({ icon: 'fa-thin fa-check', text: stay.features[0] });
                                }
                            }
                            // Ensure we have at least 3 items, fill with defaults if needed
                            while (facilities.length < 3) {
                                if (facilities.length === 0) {
                                    facilities.push({ icon: 'fa-thin fa-bed-front', text: 'Bed' });
                                } else if (facilities.length === 1) {
                                    facilities.push({ icon: 'fa-thin fa-expand', text: 'Room' });
                                } else {
                                    facilities.push({ icon: 'fa-thin fa-check', text: 'Amenities' });
                                }
                            }
                            %>
                            <div class="item mt-20">
                                <div class="img"> <img src="<%= stayImage %>" alt="<%= stay.title %>"> </div>
                                <div class="wrap">
                                    <div class="cont">
                                        <h3><a href="<%= stayLink %>"><%= stay.title %></a></h3>
                                        <div class="details">
                                            <% facilities.slice(0, 3).forEach(function(facility) { %>
                                                <span><i class="<%= facility.icon %>"></i><%= facility.text %></span>
                                            <% }); %>
                                        </div>
                                    </div>
                                    <div class="arrow"> <a href="<%= stayLink %>"><span class="fa-regular fa-arrow-right"></span></a> </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="item mt-20">
                            <div class="img"> <img src="/assets/img/rooms/a.jpg" alt=""> </div>
                            <div class="wrap">
                                <div class="cont">
                                    <h3><a href="#">No Rooms Available</a></h3>
                                    <div class="details"> <span><i class="fa-thin fa-bed-front"></i>Bed</span> <span><i class="fa-thin fa-expand"></i>Room</span> <span><i class="fa-thin fa-check"></i>Amenities</span> </div>
                                </div>
                                <div class="arrow"> <a href="#"><span class="fa-regular fa-arrow-right"></span></a> </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

