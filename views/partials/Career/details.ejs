<!-- Job Details -->
<section id="jobDetails" class="job-details pt-60 pb-90">
    <div class="container">
        <div class="row">
            <!-- Full Width Content -->
            <div class="col-sm-12 col-md-12 col-lg-10 offset-lg-1">
                <div class="job-detail-content">
                    <!-- Job Header -->
                    <div class="job-header">
                        <!-- Job Tags -->
                        <div class="job-tags">
                            <% if (job.jobPosition) { %>
                            <span class="job-tag"><%= job.jobPosition %></span>
                            <% } %>
                            <% if (job.workMode) { %>
                            <span class="job-tag"><%= job.workMode.replace('_', ' ') %></span>
                            <% } %>
                        </div>
                        
                        <h1 class="job-title"><%= job.title %></h1>
                        <% if (job.subTitle) { %>
                        <p class="job-subtitle"><%= job.subTitle %></p>
                        <% } %>
                        
                        <!-- Key Details -->
                        <div class="job-key-details">
                            <% if (job.jobPosition) { %>
                            <div class="detail-item">
                                <span class="detail-label">Designation</span>
                                <span class="detail-value">
                                    <%= job.jobPosition %>
                                </span>
                            </div>
                            <% } %>
                            <div class="detail-item">
                                <span class="detail-label">Experience</span>
                                <span class="detail-value"><%= job.experienceLevel || '' %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Job Description -->
                    <% if (job.description) { %>
                    <div class="job-section">
                        <h3 class="job-section-title">Job Description</h3>
                        <div class="job-description">
                            <%- job.description %>
                        </div>
                    </div>
                    <% } %>


               
               

 <div class="job-section">
                        <h3 class="job-section-title">Highlights</h3>
                    <div class="">
                        <div class="row">
