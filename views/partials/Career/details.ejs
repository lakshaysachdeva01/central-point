                                    <i class="fa-solid fa-clock"></i>
                                    <div>
                                        <h6 class="fs-6 m-0">Work Mode</h6>
                                        <h6 class="fs-6 mt-1" style="margin-top: 6px; color: grey; font-weight: 500; font-size: 16px;">
                                            <%= String(job.workMode || '')
                                                .trim() // Remove extra spaces
                                                .replace(/_/g, ' ') // Replace underscores with spaces
                                                .toLowerCase() // Convert to lowercase
                                                .replace(/\b\w/g, char => char.toUpperCase()) // Capitalize first letter of each word
                                            %>
                                        </h6>
                                        
                                        
                                    </div>
                                </div>
                            </div>


                            <div class="col-12 col-md-4 mb-4">
                                <div class="property-detail-feature-list-item d-flex align-items-center">
                                    <i class="fa-solid fa-sack-xmark"></i>
                                    <div>
                                        <h6 class="fs-6 m-0">Salary Range</h6>
                                        <h6 class="fs-6 mt-1" style=" margin-top: 6px; color: grey; font-weight: 500; font-size: 16px;" ><%=job.salary.minimumValue%>‚Çπ-<%=job.salary.maximumValue%>‚Çπ </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <% if (job.qualification && job.qualification.length > 0) { %>
                            <div class="col-12 col-md-4 mb-4">
                                <div class="property-detail-feature-list-item d-flex align-items-center">
                                    <i class="fa-solid fa-award"></i>
                                    <div>
                                        <h6 class="fs-6 m-0">Qualification</h6>

                                        <h6 class="fs-6 mt-1" style=" margin-top: 6px; color: grey; font-weight: 500; font-size: 16px;" >
                                            <% if (job.qualification && Array.isArray(job.qualification.qualificationStandard) && job.qualification.qualificationStandard.length > 0) { %>
                                                <%= job.qualification.qualificationStandard.map(q => q.title).join(' | ') %>
                                            <% } else { %>
                                                <!-- Do not display anything if no data -->
                                            <% } %>
                                            </h6>
                                            <h6 class="fs-7 mb-0" style="color: grey; font-size: 16px;">
                                            <% if (job.qualification && Array.isArray(job.qualification.qualificationRequired) && job.qualification.qualificationRequired.length > 0) { %>
                                                <%= job.qualification.qualificationRequired.join(' | ') %>
                                            <% } else { %>
                                                <!-- Do not display anything if no data -->
                                            <% } %>
                                            </h6>
                                        
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    
                            <div class="col-12 col-md-4 mb-4">
                                <div class="property-detail-feature-list-item d-flex align-items-center">
                                    <i class="fa-solid fa-clock-rotate-left"></i>
                                    <div style="display: flex; justify-content: center; align-items: center;">
                                        <div style="display: flex; flex-direction: column; text-align: center;">
                                            <h6 class="fs-6 m-0" style="margin-bottom: 0;">Experience</h6>
                                            <h6 class="fs-6 mt-1" style=" margin-top: 6px; color: grey; font-weight: 500; font-size: 16px;"><%= job.experienceLevel %></h6>
                                        </div>
                                    </div>
                                    
                                    
                                    
                                </div>
                            </div>

                            <div class="col-12 col-md-4 mb-4">
                                <div class="property-detail-feature-list-item d-flex align-items-center">
                                    <i class="fa-solid fa-mars-and-venus"></i>
                                    <div>
                                        <h6 class="fs-6 m-0">Preferred Gender</h6>
                                        <h6 class="fs-6 mt-1" style=" margin-top: 6px; color: grey; font-weight: 500; font-size: 16px;"><%=job.gender%></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    </div>


                   <%- include('./careerform') %>
                </div>
            </div>
        </div>
    </div>
