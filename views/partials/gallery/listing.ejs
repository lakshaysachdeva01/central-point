        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        white-space: nowrap;
        gap: 10px;
        padding: 10px 5px;
        scrollbar-width: none;
    }
    
    .gallery-breadcrumb::-webkit-scrollbar {
        display: none;
    }
    
    .breadcrumb-item {
        flex: 0 0 auto;
        text-align: center;
        color: white;
        font-size: 14px;
        white-space: nowrap;
    }
    
